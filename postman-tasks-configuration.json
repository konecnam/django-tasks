	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"const env = pm.variables.get(\"base_url\")",
					"const app_path = pm.variables.get(\"base_tasks_path\")",
					"const loginUrl = `${env}/${app_path}/api/login`;",
					"",
					"const loginPayload = {",
					"    username: pm.variables.get(\"username\"),",
					"    password: pm.variables.get(\"password\")",
					"};",
					"",
					"pm.sendRequest({",
					"    url: loginUrl,",
					"    method: 'POST',",
					"    header: {",
					"        'Content-Type': 'application/json'",
					"    },",
					"    body: {",
					"        mode: 'raw',",
					"        raw: JSON.stringify(loginPayload)",
					"    }",
					"}, function (err, res) {",
					"    if (err) {",
					"        console.log(err);",
					"    } else {",
					"        const jsonResponse = res.json();",
					"        pm.environment.set('jwt_token', jsonResponse.token);",
					"    }",
					"});"
				]
			}
		},
